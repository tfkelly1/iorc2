<%= semantic_form_for @taxon do |f| %>
  <%= f.inputs do %>
    <%= f.input :scientificname, :label => "Scientific Name (subspecies where applicable)" %>
    <%= f.input :specific, :member_label => :commonname %>

  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, :as => :input %>
  <% end %>
<% end %>
